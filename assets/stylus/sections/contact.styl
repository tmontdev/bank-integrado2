section#contact
	width 100%
	float left
	background-color #FFF
	padding-bottom 70px
	h2.title-apresentation
		padding 0
		margin 70px 0 0 0
		font-size 28px
		text-align left
		width 100%
		float left
		font-family 'Open Sans', sans-serif
	p.text-apresentation
		width 90%
		float left
		margin 10px 0 20px 0
		font-family 'Open Sans', sans-serif
		font-size 15px
		line-height 20px
		padding 0
		text-align center
	.contact-form
		width 80%
		float left
		text-align justify
		margin 0% 10%
		@media (max-width 992px)
			width 100%
			margin 0
		.pad-form
			width 80%
			margin-left 10%
			float left
		h2.title-apresentation
			color $blue1
			text-align: center
		p.text-apresentation
			color #353535
		form.form
			width 100%
			float left
			margin-top 10px
			.half-area
				width 100%
				float left
				padding 5px 0
				&.left,
				&.right
					width 50%
					@media (max-width 992px)
						width 100%
				&.left
					padding-right 5px
					@media (max-width 992px)
						padding-right 0
				&.right
					padding-left 5px
					@media (max-width 992px)
						padding-left 0
				&.text-right
					text-align right
				&.text-left
					text-align left
				&.pad-top
					padding-top 20px

				.form-control
					width 100%
					float left
					padding 10px 12px
					font-size 14px
					font-family 'Open Sans', sans-serif
					color #353535
					background-color #FFF
					border 1px solid #d9d9d9
					outline 0
					border-radius 4px
					transition all 250ms ease-in-out
					&:focus
						border 1px solid darken(#d9d9d9, 20%)
				textarea.form-control
					resize none
				button.btn-send
					background-color #FFF
					border 0
					color #353535
					font-size 16px
					font-family 'Open Sans', sans-serif
					font-weight bold
					text-transform uppercase
					cursor pointer
					transition all 250ms ease-in-out
					i
						margin-left 5px
					&:hover
						color: colors.blue1
			.terms-politics
				width 70%
				float left 
				text-align left 
				margin-top -20px
				@media(max-width 768px)
					font-size 10px
					width 60%
				span 
					font-family $font1
					color #6e6e6e
					a
						text-decoration none

				.modal
					display none
					position fixed
					z-index 999
					left 0
					top 0
					width 100%
					height 100vh
					overflow auto
					background-color alpha(black, 40%)
					transition all 250ms ease-in-out
					.modal-content
						background-color #fefefe
						margin 15% auto
						padding 20px
						border 1px solid #888
						font-family $font1
						width 80%
						.close
							color #aaa
							float right
							font-size 28px
							font-weight bold
							&:hover, &:focus
								color black
								text-decoration none
								cursor pointer
					h1
						color black
						font-family $font2
						text-align center
				.active
					display block !important