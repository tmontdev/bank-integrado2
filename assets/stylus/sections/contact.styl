section#contact
	width 100%
	float left
	background-color #f6f6f6
	h2.title-apresentation
		padding 0
		margin 70px 0 0 0
		font-size 28px
		text-align left
		width 100%
		float left
		font-family 'Open Sans', sans-serif
	p.text-apresentation
		width 90%
		float left
		margin 10px 0 0 0
		font-family 'Open Sans', sans-serif
		font-size 15px
		line-height 20px
		padding 0
	.contact-form
		width 80%
		float left
		text-align justify
		margin 0% 10%
		.pad-form
			width 80%
			margin-left 10%
			float left
		h2.title-apresentation
			color $blue1
			text-align: center
		p.text-apresentation
			color #353535
		form.form
			width 100%
			float left
			margin-top 10px
			.half-area
				width 100%
				float left
				padding 5px 0
				&.left,
				&.right
					width 50%
				&.left
					padding-right 5px
				&.right
					padding-left 5px
				&.text-right
					text-align right
				&.pad-top
					padding-top 20px
				.form-control
					width 100%
					float left
					padding 10px 12px
					font-size 14px
					font-family 'Open Sans', sans-serif
					color #353535
					background-color: colors.background_gray
					border 1px solid #d9d9d9
					outline 0
					border-radius 4px
					transition all 250ms ease-in-out
					&:focus
						border 1px solid darken(#d9d9d9, 20%)
				button.btn-send
					background-color: colors.background_gray
					border 0
					color #353535
					font-size 16px
					font-family 'Open Sans', sans-serif
					font-weight bold
					text-transform uppercase
					cursor pointer
					transition all 250ms ease-in-out
					i
						margin-left 5px
					&:hover
						color: colors.blue1
