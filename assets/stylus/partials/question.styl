#question
	width 100%
	float left
	//background-color alpha(darken($blue1, 60%), 80%)
	background-color #46a1de
	position relative
	padding-bottom 2%
	.selector
		width 100%
		float left
		padding 50px 10% 0 10%
		position relative
		.selector-content
			width 100%
			float left
			position relative
			z-index 5
			button
				width 50%
				float left
				border-top-left-radius: 5px
				border-top-right-radius: 5px
				background-color transparent
				border none
				color white
				font-family $font2
				font-weight: 300
				font-size 1.5em
				padding 2% 0%
				transition all 500ms
				position relative
				&:after
					content " "
					width 100%
					float left
					position absolute
					bottom 0
					left 0
					height 15px
					background-color alpha(white, 50%)
					transition all 500ms
					opacity 0
					border-top-right-radius: 5px
					border-top-left-radius: 5px
				&:hover
					opacity 1
					&:after
						opacity 1
			.actived
				background-color white
				border solid 1px white
				color $blue1
				&:after
					background-color white
					border-radius 0
		.question-square
			width 100%
			float left
			border-radius 5px
			background-color white
			display none
			margin-top -5px
			.question-title
				width 100%
				float left
				text-align center
				padding 2% 1%
				border-bottom solid 2px #ededed
				span
					font-family $font1
					font-size 1.6em
					color $blue1
			.question-container
				width 100%
				float left
				padding 0% 7% 0%  5%
				.question-field
					width 100%
					float left
					border-bottom solid 2px #ededed
					position relative
					padding 5px 10px 5px 3em
					.query-icon
						position absolute
						top 10px
						left 6px
						transition all 250ms
						i
							font-size 2.5em
							color $blue1
					.question-query
						width 100%
						float left
						padding 10px 0%
						span
							width 100%
							float left
							font-family $font2
							color #353535
							font-weight: 400;
							font-size 1.2em
						.question-answer
							width 100%
							float left
							padding 1% 0%
							span
								font-weight: 300
					&:last-child
						border-bottom none
		.actived
			opacity 1
			display block
