#question
	width 100%
	float left
	background-color #f6f6f6
	.question-square
		width 80%
		float left
		margin 1% 10%
		box-shadow 0px 0px 2px #ddd
		border-radius 5px
		background-color white
		.question-title
			width 100%
			float left
			text-align center
			padding 2% 1%
			border-bottom solid 2px #ededed
			span
				font-family $font1
				font-size 1.6em
				color #353535
		.question-container
			width 100%
			float left
			padding 0% 5%
			.question-field
				width 100%
				float left
				border-bottom solid 2px #ededed
				position relative
				padding 5px 5px 5px 3em
				.query-icon
					position absolute
					top 2px
					left 6px
					i
						font-size 2.5em
						color $blue1
				.question-query
					width 100%
					float left
					span
						width 100%
						float left
						font-family $font2
						color #353535
						font-weight: 600;
					.question-answer
						width 100%
						float left
						padding 1% 0%
						span
							font-weight: 300
				&:last-child
					border-bottom none
