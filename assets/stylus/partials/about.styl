section#about
	width 100%
	float left
	padding 30px 0 40px 0
	.about-item
		width 100%
		float left
		position relative
		padding 60px 0 30px 0
		min-height 450px
		display none
		background-size 65% auto
		background-position 110% 0
		background-repeat no-repeat
		.block-info
			width 50%
			float left
			padding-top 10px
			h1
				float left
				width 100%
				font-size 40px
				font-family 'Roboto Condensed', sans-serif
				color #404040
				margin 0
				padding 0
				span
					color: colors.blue1
			p
				width 100%
				margin 0
				padding 20px 0 0 0
				float left
				font-family 'Open Sans', sans-serif
				color rgba(0, 0, 0, 0.4)
				font-size 16px
		.image
			width 70%
			float left
			position absolute
			top -50px
			right 0
			height 100%
			background-size cover
			z-index -1
		&.who
			background-image url('../img/who.jpg')
		&.mission
			background-image url('../img/mission.jpg')
		&.actived
			display block