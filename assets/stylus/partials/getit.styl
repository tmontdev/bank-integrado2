#getit
	width 100%
	float left
	background-color #ededed
	transition all 500ms
	.getit-presentation
		width 100%
		float left
		text-align center
		h2
			color darken($blue1, 30%)
			font-family $font1
			font-size 3em
			margin-bottom: 10px
		span
			color #6e6e6e
			font-family $font2
			width 100%
			float left
			font-size 1.5em
			margin 1% 0%
		.discover
			width 20%
			height 80px
			color darken($blue1, 30%)
			font-family $font1
			transition all 500ms
			font-size 1.8em
			margin 1% 0%
			background-color white
			border-radius 0px
			border solid 1px darken($blue1, 30%)
			text-transform uppercase
			&:hover
				width 25%
				border-radius 25px
				color white
				background-color darken($blue1, 30%)
				box-shadow 0px 0px 5px darken($blue1, 30%)
		.actived
			width 25%
			margin 0% 37.5%
			border-radius 25px
			color white
			background-color darken($blue1, 30%)
			box-shadow 0px 0px 5px darken($blue1, 30%)
	.steps
		width 100%
		float left
		display none
		.step
			width 25%
			float left
			padding 0.5%
			text-align center
			.step-content
				width 100%
				float left
				border-radius 10px
				padding 2%
				.step-presentation
					width 100%
					float left
					.step-icon
						width 100%
						float left
						margin 2% 0%
						i
							color darken($blue1, 30%)
							font-size 3em
							padding 1em
							border-radius 50%
							border solid 1px darken($blue1, 30%)
					span
						color darken($blue1, 30%)
						font-family $font1
						font-size 1.4em
						margin 5% 0
				.step-explanation
					width 100%
					float left
					color #4a4a4a
					font-size 1.2em
					font-family $font2
					padding 5% 0%
	.active
		display block
