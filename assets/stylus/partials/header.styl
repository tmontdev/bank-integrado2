header#header
	width 100%
	float left
	position absolute
	top 0
	left 0
	transition all 250ms ease-in-out
	.block-contact
		background-color rgba(0, 0, 0, 0.15)
		width 100%
		float left
		font-family 'Open Sans', sans-serif
		transition all 250ms
		padding-top 12px
		ul
			padding 0
			margin 0 0 10px -5px
			list-style none
			text-align right
			li
				color #FFF
				font-size fs = 14px
				letter-spacing 1px
				margin-left	24px
				display inline-block
				padding-right 5px
				padding-left 5px
				&:last-child
					padding-right 0
				i
					margin-right 3px
					opacity 0.7
					font-size fs+3
	.block-menu
		width 100%
		float left
		border-bottom 1px solid alpha(#FFF, 0.3)
		padding 25px 0
		transition all 250ms ease-in-out
		.logo
			width 140px
			float left
			> img
				max-width 100%
				display block
				margin 0 auto
		ul
			float right
			width 70%
			text-align right
			list-style none
			padding 0
			margin 0
			li
				display inline-block
				> a
					color #FFF
					font-size 16px
					letter-spacing 1px
					padding 5px 0 0 45px
					display block
					font-family 'Open Sans', sans-serif
					text-decoration none
					font-weight 600
	&.nice-header
		position fixed
		top 0
		left 0
		z-index 4
		.block-contact
			display none
		.block-menu
			background-color #FFF
			ap(box-shadow, 0 3px 6px 0 rgba(0, 0, 0, 0.1))
			ul li > a
				color #666