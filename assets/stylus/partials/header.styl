.switch-bar,
.switch-header
	display none	
header#header
	width 100%
	float left
	position absolute
	top 0
	left 0
	transition all 250ms ease-in-out
	.block-menu
		width 100%
		float left
		padding 40px 0
		transition all 250ms ease-in-out

		.container
			padding-left 60px
			padding-right @padding-left
			transition all 250ms
		.logo
			size 15
			> img
				max-width 100%
				display block
		.menu
			size 70
			ul
				size 100
				text-align center
				list-style none
				padding 0
				margin 0
				li
					display inline-block
					> a
						color #FFF
						font-size 16px
						padding 5px 10px
						letter-spacing 1px
						display block
						font-family 'PT Sans', sans-serif
						text-decoration none
						font-weight 400
						text-transform uppercase
						line-height 30px
						transition all 250ms ease-in-out
						&:hover
							color: colors.blue1
		.header-social
			size 15
			ul
				list-style none
				text-align right
				size 100
				padding 0
				margin 0
				li
					display inline-block
					a
						color rgba(255,255,255,0.4)
						font-size 1.4em
						padding 9px 0
						margin 0 4px
						line-height 40px
						transition all 250ms ease-in-out
						&:hover
							color #FFF
	&.nice-header
		position fixed
		top 0
		left 0
		z-index 4
		.container
			padding-left 0
			padding-right @padding-left
		.block-contact
			display none
		.block-menu
			background-color #FFF
			ap(box-shadow, 0 3px 6px 0 rgba(0, 0, 0, 0.1))
			padding 15px 0
			ul li > a
				color #666
			.header-social ul li > a:hover
				color #999
.rollback
	display none
@media (max-width: 768px)
	.rollback
		z-index -1
		position fixed
		top 0
		right 0
		width 30%
		opacity 0
		height 100vh
		transition z-index 300ms, opacity 650ms ease-in-out
		display inline-block
		&.show
			z-index 5
			opacity 1
			background-color rgba(0, 0, 0, 0.4)
	.switch-header
		position fixed
		display block
		color white
		border 0
		top 12px
		left 12px
		font-size 20px
		padding 0px 4px
		z-index 5
		&.switch-on
			color: colors.blue1
	.switch-bar
		width 100%
		z-index 4
		float left
		height 50px
		position fixed
		opacity 1
		display block		
		top 0
		left 0
		background-color #f8f8f8
		span
			position fixed
			display block
			font-family $font1
			color $blue1
			top 14px
			left 40px
			z-index 999	
	header#header		
		width 70%
		float left
		position fixed
		height 100vh
		opacity 0	
		top 0
		left -70%
		background-color $blue1
		transition all 250ms ease-in-out
		z-index 3
		&.header-actived
			left 0
			opacity 1
			z-index 5
		.block-menu
			width 100%
			float left
			padding 0
			transition all 250ms ease-in-out
			.container
				padding 0 !important
				width 100% !important
				float left
				transition all 250ms
			.logo
				size 100
				padding 8px 40px 0% 60px
				> img
					max-width 150px
					display block
			.menu
				size 100
				margin-top 20px
				ul
					size 100
					text-align left
					list-style none
					padding 0
					margin 0
					li
						display inline-block
						size 100
						> a
							color #FFF
							font-size 16px
							padding 2px 10px
							letter-spacing 1px
							display block
							font-family 'Robot Condensed', sans-serif
							text-decoration none
							transition all 250ms ease-in-out
						&:hover
							a
								color #FFF
			.header-social
				size 100
				text-align left
				ul
					list-style none
					text-align left
					size 100
					padding 0px
					margin 20px 0 0 7px
					li
						padding 0px
						display inline-block
						margin 0px 2px
						transition all 250ms ease-in-outs
						text-align center
						a
							color: colors.blue1
							background-color #FFF
							border-radius 50%
							font-size 18px
							padding 0
							margin 0
							width 37px
							height 37px
							line-height @height
							transition all 250ms ease-in-out
							display block
						&:hover
							a
								color: colors.blue1