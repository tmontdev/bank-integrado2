.switch-bar,
.switch-header
	display none	
header#header
	width 100%
	float left
	position absolute
	top 0
	left 0
	transition all 250ms ease-in-out
	.block-menu
		width 100%
		float left
		padding 40px 0
		transition all 250ms ease-in-out

		.container
			padding-left 60px
			padding-right @padding-left
			transition all 250ms
		.logo
			size 15
			> img
				max-width 100%
				display block
		.menu
			size 70
			ul
				size 100
				text-align center
				list-style none
				padding 0
				margin 0
				li
					display inline-block
					> a
						color #FFF
						font-size 16px
						padding 5px 10px
						letter-spacing 1px
						display block
						font-family 'PT Sans', sans-serif
						text-decoration none
						font-weight 400
						text-transform uppercase
						line-height 30px
						transition all 250ms ease-in-out
						&:hover
							color: colors.blue1
		.header-social
			size 15
			ul
				list-style none
				text-align right
				size 100
				padding 0
				margin 0
				li
					display inline-block
					a
						color rgba(255,255,255,0.4)
						font-size 1.4em
						padding 9px 0
						margin 0 4px
						line-height 40px
						transition all 250ms ease-in-out
						&:hover
							color #FFF
	&.nice-header
		position fixed
		top 0
		left 0
		z-index 4
		.container
			padding-left 0
			padding-right @padding-left
		.block-contact
			display none
		.block-menu
			background-color #FFF
			ap(box-shadow, 0 3px 6px 0 rgba(0, 0, 0, 0.1))
			padding 15px 0
			ul li > a
				color #666
			.header-social ul li > a:hover
				color #999
	.rollback
		display none
@media (max-width: 768px)
	.switch-on
		border solid 1px $blue1 !important
		color $blue1 !important
	.back
		width 30%
		height 100vh
		float left 
		position fixed 
		display block !important
		background-color black
		top 0 
		left 70%
	.switch-header
		position fixed
		display block
		color white
		border solid 1px white
		border-radius 4px
		top 10px
		left 10px
		font-size 20px
		padding 0px 4px
		z-index 999
	.switch-bar
		width 100%
		z-index 900
		float left
		height 50px
		position fixed
		opacity 1
		display block		
		top 0
		left 0
		background-color #ededed
		box-shadow 0px 0px 5px black
		span
			position fixed
			display block
			font-family $font1
			color $blue1
			top 14px
			left 40px
			z-index 999	
	header#header		
		width 0%
		float left
		position fixed
		height 100vh
		opacity 0
		display none		
		top 0
		left 0
		background-color $blue1
		transition all 250ms ease-in-out
		z-index 901
		.block-menu
			width 100%
			float left
			padding 0
			transition all 250ms ease-in-out
			.container
				padding 0 !important
				width 100% !important
				float left
				transition all 250ms
			.logo
				size 100
				padding 8px 40px 0% 60px
				> img
					max-width 150px
					display block
			.menu
				size 100
				margin-top 20px
				ul
					size 100
					text-align left
					list-style none
					padding 0
					margin 0
					li
						display inline-block
						size 100
						> a
							color #FFF
							font-size 18px
							padding 5px 10px
							letter-spacing 1px
							display block
							font-family $font1
							text-decoration none
							font-weight 600
							text-transform uppercase
							line-height 30px
							transition all 250ms ease-in-out
							&:hover
								color white
						&:focus
							color white
							background-color $blue2
			.header-social
				size 100
				text-align left
				ul
					list-style none
					text-align left
					size 100
					padding 0px
					margin-top 40px
					li
						width 40px
						height 40px
						display block
						border-radius 50%
						border solid 1px white
						padding 0px
						display inline-block
						margin 0px 7px
						transition all 250ms ease-in-outs
						text-align center
						a
							color white
							font-size 25px !important
							padding 0
							margin 0
							line-height 40px
							transition all 250ms ease-in-out
							&:hover, &:focus
								color black
						&:hover, &:focus
							border solid 1px black
							color black
		.show
			display block !important
			z-index 999
			position fixed 
			height 100vh
			top 0
			left 100%
			width 43%
			background-color transparent
		&.nice-header
			position fixed
			height 100vh
			top 0
			left 0
			z-index 901
			.container
				padding 0 !important
				width 100% !important
				float left
				transition all 250ms
			.block-contact
				display none
			.block-menu
				background-color $blue1
				height 100vh
				ap(box-shadow, 0 3px 6px 0 rgba(0, 0, 0, 0.1))
				padding 0 !important
				ul li > a
					color white
				.header-social ul li > a:hover
					color black
	.header-actived
		width 70% !important
		opacity 1 !important
		display block !important

		
	