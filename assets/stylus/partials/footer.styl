footer#footer
	size 100
	height 90vh
	background-image url('http://oneclickpixels.com/investable/assets/images/bg-imgs/bg-img-3.jpg')
	background-size cover
	background-position center center
	.overlay
		background-color rgba(0,5,71,0.6)
		height 100%
		size 100
	.content-footer
		size 100
		padding-top 15vh
		h1.title
			color #f1f1f1
			size 60
			text-align center
			font-family 'Roboto Condensed', sans-serif
			padding 0
			margin 0 0 0 20%
			font-size 46px
			ap(text-shadow, 1px 1px 1px #565252)
		.block-buttons
			size 100
			padding-top 8vh
			text-align center
			> a
				display inline-block
				transition all 250ms ease-in-out
				font-family 'Roboto Condensed', sans-serif
				text-decoration none
				border 0
				cursor pointer
				font-size 20px
			a.btn-simulate
				color #444
				padding 10px 40px
				border-radius 4px
				background-color alpha(#FFF, 0.9)
				&:hover
					color #FFF
					background-color: colors.blue1
		.footer-social
			size 100
			margin-top 20vh
			border-top 1px solid alpha(#FFF, 0.5)
			padding 20px 5% 0 5%
			ul
				size 50
				list-style none
				padding 0
				margin 0
				li
					display inline-block
					margin 0 10px
					> a
						display block
						text-decoration none
						transition all 250ms ease-in-out
				&.list-links
					li
						> a
							color alpha(#FFF, 0.8)
							letter-spacing 1px
							font-size 18px
							font-family 'Roboto Condensed', sans-serif
							&:hover
								color #FFF
						&:first-child
							margin-left 0
				&.list-social
					text-align right
					li
						> a
							font-size 22px
							color #222
							width 45px
							height @width
							line-height @height
							text-align center
							border-radius 50%
							background-color alpha(#FFF, 0.8)
							position relative
							&:hover
								background-color #FFF
								&:after
									opacity 1

						.fb
							opacity 1
							&:after
								content "Curta nosssa Página no Facebook!"
								position absolute
								bottom -50px
								left -130px
								text-align center
								font-size .8em
								color white
								font-family $font2
								width 300px
								transition all 200ms ease-in-out
								opacity 0
						.li
							opacity 1
							&:after
								content "Conheça o nosso LinkedIn!"
								position absolute
								bottom -50px
								left -130px
								text-align center
								font-size .8em
								color white
								font-family $font2
								width 300px
								transition all 200ms ease-in-out
								opacity 0
						.tt
							opacity 1
							&:after
								content "Nos siga no Twitter!"
								position absolute
								bottom -50px
								left -130px
								text-align center
								font-size .8em
								color white
								font-family $font2
								width 300px
								transition all 200ms ease-in-out
								opacity 0
