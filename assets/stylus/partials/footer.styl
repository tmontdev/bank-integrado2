footer#footer
	size 100
	height 90vh
	background-image url('http://downloadwallpaper.org/wp-content/uploads/2016/05/Sunrise-wallpaper6.jpg')
	background-size cover
	background-position center center
	.overlay
		background-color rgba(0, 0, 0, 0.8)
		height 100%
		size 100
	.content-footer
		size 100
		padding-top 15vh
		h1.title
			color #f1f1f1
			size 60
			text-align center
			font-family 'Roboto Condensed', sans-serif
			padding 0
			margin 0 0 0 20%
			font-size 46px
			ap(text-shadow, 1px 1px 1px #565252)
		.block-buttons
			size 60
			margin-left 20%
			padding-top 8vh
			> a
				display inline-block
				transition all 250ms ease-in-out
				font-family 'Roboto Condensed', sans-serif
				text-decoration none
				border 0
				cursor pointer
				font-size 20px
			a.btn-simulate
				color #444
				padding 10px 40px
				border-radius 4px
				background-color alpha(#FFF, 0.9)
				&:hover
					color #FFF
					background-color: colors.blue1
			a.btn-about
				border-radius 0
				padding 10px 
				border-bottom 1px solid alpha(#FFF, 0.8)
				float right
				color alpha(#FFF, 0.8)
				font-weight 100
				i
					position relative
					top 3px
					margin-left 4px
				&:hover
					color #FFF
					border-bottom-color #FFF
		.footer-social
			size 100
			margin-top 20vh
			border-top 1px solid alpha(#FFF, 0.5)
			padding 20px 5% 0 5%
			ul
				size 50
				list-style none
				padding 0
				margin 0
				li
					display inline-block
					margin 0 10px
					> a
						display block
						text-decoration none
						transition all 250ms ease-in-out
				&.list-links
					li
						> a
							color alpha(#FFF, 0.8)
							letter-spacing 1px
							font-size 18px
							font-family 'Roboto Condensed', sans-serif
							&:hover
								color #FFF
						&:first-child
							margin-left 0
				&.list-social
					text-align right
					li
						> a
							font-size 22px
							color #222
							width 45px
							height @width
							line-height @height
							text-align center
							border-radius 50%
							background-color alpha(#FFF, 0.8)
							&:hover
								background-color #FFF